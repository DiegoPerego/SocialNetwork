<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="diegoperego_it.socialnetwork.InsertActivity">

    <EditText
        android:id="@+id/eTitolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tInsert"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:hint="Titolo"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textStyle="italic" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="230dp"
        android:layout_below="@+id/eTitolo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp">

        <EditText
            android:id="@+id/eContenuto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/cardview_shadow_end_color"
            android:ems="10"
            android:focusable="true"
            android:gravity="left|top"
            android:hint="Contenuto"
            android:inputType="textMultiLine"
            android:padding="5dp"
            android:textStyle="italic" />
    </RelativeLayout>

    <Button
        android:id="@+id/bInserisci"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:text="Invia"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tInsert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:fontFamily="serif"
        android:text="Scrivi qui il tuo nuovo Post"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="italic" />
</RelativeLayout>
